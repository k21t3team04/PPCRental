@model PPC_Rental.Models.PROPERTY

@{
    ViewBag.Title = "Details";
}


<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">@Model.PropertyName</h1>
            </div>
        </div>
    </div>
</div>
<div class="content-area single-property" style="background-color: #FCFCFC;">
    <div class="container">

        <div class="clearfix padding-top-40">

            <div class="col-md-8 single-property-content prp-style-1 ">
                <div class="row">
                    <div class="light-slide-item">
                        <div class="clearfix">
                            <div class="favorite-and-print">
                                <a class="add-to-fav" href="#login-modal" data-toggle="modal">
                                    <i class="fa fa-star-o"></i>
                                </a>
                                <a class="printer-icon " href="javascript:window.print()">
                                    <i class="fa fa-print"></i>
                                </a>
                            </div>

                            <ul id="image-gallery" class="gallery list-unstyled cS-hidden">
                                <li data-thumb="/Images/@Model.Images" alt="Alternate Text" />
                                    <img src="/Images/@Model.Images">
                                    </li>

                            </ul>
                        </div>
                    </div>
                </div>

                <div class="single-property-wrapper">
                    <div class="single-property-header">
                        <h1 class="property-title pull-left">@Html.DisplayFor(model => model.PropertyName)</h1>
                        <span class="property-price pull-right">@Html.DisplayFor(model => model.Price) $</span>

                    </div>

                    <div class="property-meta entry-meta clearfix ">
                        <div class="col-xs-6 col-sm-3 col-md-3 p-b-15">
                            <span class="property-info icon-area">
                                <img src="/Content/assets/img/icon/status.png">
                            </span>
                            <span class="property-info-entry">
                                <span class="property-info-label">Status</span>
                                <span class="property-info-value">@Model.PROPERTY_TYPE.CodeType<b class="property-info-unit"></b></span>
                            </span>
                        </div>
                        <div class="col-xs-6 col-sm-3 col-md-3 p-b-15">
                            <span class="property-info icon-area">
                                <img src="/Content/assets/img/icon/area.png">
                            </span>
                            <span class="property-info-entry">
                                <span class="property-info-label">Area</span>
                                <span class="property-info-value">@Html.DisplayFor(model => model.Area)<b class="property-info-unit"></b></span>
                            </span>
                        </div>

                        <div class="col-xs-6 col-sm-3 col-md-3 p-b-15">
                            <span class="property-info-icon icon-bed">

                                <img src="~/Content/assets/img/icon/bid.png" />
                            </span>
                            <span class="property-info-entry">
                                <span class="property-info-label">Bedrooms</span>
                                <span class="property-info-value">@Html.DisplayFor(model => model.BedRoom)</span>
                            </span>
                        </div>

                        <div class="col-xs-6 col-sm-3 col-md-3 p-b-15">
                            <span class="property-info-icon icon-bed">
                                <img src="/Content/assets/img/icon/garage.png">
                            </span>
                            <span class="property-info-entry">
                                <span class="property-info-label">Packing Place</span>
                                <span class="property-info-value">@Html.DisplayFor(model => model.PackingPlace)</span>
                            </span>
                        </div>

                        <div class="col-xs-6 col-sm-3 col-md-3 p-b-15">
                            <span class="property-info-icon icon-bath">
                                <img src="/Content/assets/img/icon/bath.png">
                            </span>
                            <span class="property-info-entry">
                                <span class="property-info-label">Bathrooms</span>
                                <span class="property-info-value">@Html.DisplayFor(model => model.BathRoom)</span>
                            </span>
                        </div>

                    </div>
                    <div class="section additional-details">

                        <h4 class="s-property-title">Location Details</h4>

                        <ul class="additional-details-list clearfix">
                            <li>
                                <span class="col-xs-6 col-sm-4 col-md-4 add-d-title">District</span>
                                <span class="col-xs-6 col-sm-8 col-md-8 add-d-entry">@Model.DISTRICT.DistrictName</span>
                            </li>

                            <li>
                                <span class="col-xs-6 col-sm-4 col-md-4 add-d-title">Ward</span>
                                <span class="col-xs-6 col-sm-8 col-md-8 add-d-entry">@Model.WARD.WardName</span>
                            </li>
                            <li>
                                <span class="col-xs-6 col-sm-4 col-md-4 add-d-title">Street</span>
                                <span class="col-xs-6 col-sm-8 col-md-8 add-d-entry">@Model.STREET.StreetName</span>
                            </li>
                            </ul>
                    </div>
                    <!-- .property-meta -->

                    <div class="section">
                        <h4 class="s-property-title">Description</h4>
                        <div class="s-property-content">
                            <p>@Model.Content</p>
                        </div>
                    </div>
                    <!-- End description area  -->
                    <!-- End additional-details area  -->
                    <div class="section property-features">

                            <h4 class="s-property-title">Features</h4>
                            <ul>
                            </ul>
                        </div>
        
                </div>
            </div>


            <div class="col-md-4 p0">
                <aside class="sidebar sidebar-property blog-asside-right">
                    <div class="dealer-widget">
                        <div class="dealer-content">
                            <div class="inner-wrapper">

                                <div class="clear">
                                    <div class="col-xs-4 col-sm-4">
                                        <a href="">
                                            <img src="/Content/assets/img/client-face.jpg" class="img-circle">
                                        </a>
                                    </div>
                                    <div class="col-xs-8 col-sm-8 ">
                                        <h3 class="dealer-name">
                                            <a href="">Võ Trung Hậu</a>
                                            <span>Stranger Band</span>
                                        </h3>
                                        <div class="dealer-social-media">

                                            <a class="facebook" target="_blank" href="https://www.facebook.com/hau.votrung.92">
                                                <i class="fa fa-facebook"></i>
                                            </a>


                                            <a class="instagram" target="_blank" href="https://www.instagram.com/callmerean/">
                                                <i class="fa fa-instagram"></i>
                                            </a>
                                        </div>

                                    </div>
                                </div>

                                <div class="clear">
                                    <ul class="dealer-contacts">
                                        <li><i class="pe-7s-map-marker strong"> </i>306/19 Nguyen Thi Minh Khai - Ward 5 - District 3 - HCMC</li>
                                        <li><i class="pe-7s-mail strong"> </i> vth1122@gmail.com</li>
                                        <li><i class="pe-7s-call strong"> </i> 0933310077</li>
                                    </ul>
                                    <p>Ten Ten Ten</p>
                                </div>

                            </div>
                        </div>
                    </div>
                </aside>
            </div>

        </div>
    </div>
</div>
